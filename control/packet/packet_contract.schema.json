{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/schemas/packet_contract.schema.json",
  "title": "Packet Contract (machine-readable)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "packet_id",
    "title",
    "domain",
    "area",
    "purpose",
    "scope_boundary",
    "inputs",
    "outputs",
    "end_state_predicate",
    "evidence_artifacts",
    "failure_modes",
    "forbidden_actions"
  ],
  "properties": {
    "packet_id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9\\-]{2,64}$"
    },
    "title": {
      "type": "string",
      "minLength": 3
    },
    "domain": {
      "type": "string",
      "enum": [
        "engineering",
        "operations"
      ]
    },
    "area": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "DRAFT",
        "READY",
        "RUNNING",
        "BLOCKED",
        "DONE",
        "DENIED"
      ],
      "default": "DRAFT"
    },
    "purpose": {
      "type": "string",
      "minLength": 10
    },
    "scope_boundary": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 3
      },
      "minItems": 1
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "required_paths"
      ],
      "properties": {
        "required_paths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 0
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "end_state_predicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "commands",
        "expected"
      ],
      "properties": {
        "commands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "expected": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      }
    },
    "evidence_artifacts": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "failure_modes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "forbidden_actions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    }
  }
}